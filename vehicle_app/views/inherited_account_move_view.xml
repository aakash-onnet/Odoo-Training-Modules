    	<record id="view_inherited_account_move_tree" model="ir.ui.view">
            <field name="name">res.users.form.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='journal_id']" position="before">
    				<field name="vehicle_registration_number" string="Vehicle Registration No." />
    				<field name="vehicle_remarks" string="Vehicle Remarks" />
    				<field name="usage_mileage" />
    				<field name="remarks" />
                </xpath>
            </field>
        </record>

