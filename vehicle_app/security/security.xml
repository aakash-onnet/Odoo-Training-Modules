<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="vehicle_category" model="ir.module.category">
        <field name="name">Vehicle Management</field>
        <field name="description">A nicer way to manage vehicles for any business.</field>
        <field name="sequence">11</field>
    </record>

    <record id="vehicle_mechanic_group" model="res.groups">
        <field name="name">Mechanic</field>
        <field name="category_id" ref="vehicle_category" />
    </record>

    <record id="vehicle_user_group" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="vehicle_category" />
        <field name="implied_ids" eval="[(4, ref('vehicle_mechanic_group'))]" />
    </record>

</odoo>
