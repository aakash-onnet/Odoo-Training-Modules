<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree View To display in page. -->
    <record id="view_hospital_patient_readonly_tree" model="ir.ui.view">
        <field name="name">hospital.patient.readonly.tree</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <tree string="Patients" create="0" delete="0" edit="0">
                <field name="name" decoration-info="1"/>
                <field name="dob" optional="show"/>
                <field name="gender" optional="hide"/>
            </tree>
        </field>
    </record>


    <!--Form View To display in Page -->

    <record id="view_hospital_patient_readonly_form" model="ir.ui.view">
        <field name="name">hospital.patient.readonly.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form string="Patients" create="0" delete="0" edit="0">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field string="Patient DOB" name="dob"/>
                        </group>
                        <group>
                            <field name="gender"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_users"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Action For patient model. -->

    <record id="action_hospital_readonly_patient" model="ir.actions.act_window">
        <field name="name">View Patients</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_ids"
                   eval="[Command.clear(),
                          (0, 0, {'view_mode': 'tree', 'view_id': ref('view_hospital_patient_readonly_tree')}),
                          (0, 0, {'view_mode': 'form', 'view_id': ref('view_hospital_patient_readonly_form')})]"/>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p>
                An account is part of a ledger allowing your company
                to register all kinds of debit and credit transactions.
                Companies present their annual accounts in two main parts: the
                balance sheet and the income statement (profit and loss
                account). The annual accounts of a company are required by law
                to disclose a certain amount of information.
            </p>
        </field>
    </record>
</odoo>