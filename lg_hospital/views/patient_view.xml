<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree View To display in page. -->
    <record id="view_hospital_patient_tree" model="ir.ui.view">
        <field name="name">hospital.patient.tree</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <tree string="Patients">
                <field name="name" decoration-info="1"/>
                <field name="dob" optional="show"/>
                <field name="gender" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="view_hospital_patient_search" model="ir.ui.view">
        <field name="name">hospital.patient.search</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <search>

                <field name="name" string="Patient Name"
                       filter_domain="[('name', 'ilike', self)]"/>
                <field name="gender" string="Patient Gender"/>
                <filter name="gender_male" string="Male"
                        domain="[('gender', '=', 'male')]"/>
                <filter name="gender_female" string="Female"
                        domain="[('gender', '=', 'female')]"/>

                <group expand="1" string="Group By">
                    <filter string="Gender" name="group_by_gender"
                            context="{'group_by':'gender'}"/>
                    <filter string="Name" name="group_by_name"
                            context="{'group_by': 'name' }"/>
                </group>
            </search>
        </field>
    </record>

    <!--Form View To display in Page -->

    <record id="view_hospital_patient_form" model="ir.ui.view">
        <field name="name">hospital.patient.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form string="Patients">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field string="Patient DOB" name="dob"/>
                        </group>
                        <group>
                            <field name="gender"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"
                           groups="base.group_users"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Action For patient model. -->

    <record id="action_hospital_patient" model="ir.actions.act_window">
        <field name="name">Patient</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="view_ids"
               eval="[Command.clear(),
                          (0, 0, {'view_mode': 'tree', 'view_id': ref('view_hospital_patient_tree')}),
                          (0, 0, {'view_mode': 'form', 'view_id': ref('view_hospital_patient_form')})]"/>
        <field name="help" type="html">
            <p>
                An account is part of a ledger allowing your company
                to register all kinds of debit and credit transactions.
                Companies present their annual accounts in two main parts: the
                balance sheet and the income statement (profit and loss
                account). The annual accounts of a company are required by law
                to disclose a certain amount of information.
            </p>
        </field>
    </record>
</odoo>