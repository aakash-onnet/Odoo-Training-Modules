<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_estate_property_tag_tree" model="ir.ui.view">
        <field name="name">view.estate.property.tag.tree</field>
        <field name="model">estate.property.tag</field>
        <field name="arch" type="xml">
            <tree string="Property Tags" editable="bottom">
                <field name="sequence" widget="handle" />
                <field name="name" />
            </tree>
        </field>
    </record>
    <record id="action_estate_property_tags" model="ir.actions.act_window">
        <field name="name">Property Tags</field>
        <field name="res_model">estate.property.tag</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>
</odoo>